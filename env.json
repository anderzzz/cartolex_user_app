{
  "FLASK_SECRET_USER_APP": {
    "default": null,
    "secret": true,
    "required": true,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Flask secret key for user app, internal use for CSRF protection"
  },
  "CARTOLEX_API_BASE_URL": {
    "default": "http://localhost:5555",
    "secret": false,
    "required": true,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Base URL for the Cartolex backend API server"
  },
  "CORS_ORIGINS": {
    "default": "http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000",
    "secret": false,
    "required": false,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Comma-separated list of allowed CORS origins for cross-origin requests"
  },
  "SECURITY_HEADERS_ENABLED": {
    "default": "true",
    "secret": false,
    "required": false,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Enable security headers in HTTP responses (true/false)"
  },
  "CSP_MODE": {
    "default": "report-only",
    "secret": false,
    "required": false,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Content Security Policy mode: 'report-only' or 'enforce'"
  },
  "DISABLE_SECURITY": {
    "default": "false",
    "secret": false,
    "required": false,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Disable security features for development (true/false)"
  },
  "RATELIMIT_DEFAULT": {
    "default": "1000 per hour",
    "secret": false,
    "required": false,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Default rate limit using Flask-Limiter syntax (e.g., '1000 per hour')"
  },
  "RATELIMIT_ENABLED": {
    "default": "false",
    "secret": false,
    "required": false,
    "required_where": "cartolex_user_app.config",
    "type": "string",
    "description": "Enable rate limiting for API endpoints (true/false)"
  }
}